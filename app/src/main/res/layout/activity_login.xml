<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        tools:context=".screen.login.LoginActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintBottom_toTopOf="@+id/loginBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="25sp"
                android:textColor="#000"
                android:fontFamily="@font/nanumsquare_ac_b"
                android:layout_marginBottom="10sp"
                />
            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etv_design_1"
                android:fontFamily="@font/nanumsquare_ac_r"
                android:textCursorDrawable="@color/second_color"
                android:textSize="25dp"
                android:padding="20sp"
                android:layout_marginBottom="25sp"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN 번호"
                android:textSize="25sp"
                android:textColor="#000"
                android:fontFamily="@font/nanumsquare_ac_b"
                android:layout_marginBottom="10sp"
                />

            <EditText
                android:id="@+id/pwEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:inputType="numberPassword"
                android:textCursorDrawable="@color/second_color"
                android:background="@drawable/etv_design_1"
                android:fontFamily="@font/nanumsquare_ac_r"
                android:textSize="25dp"
                android:padding="20sp"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="로그인"
            android:background="@drawable/btn_design_1"
            android:textColor="#fff"
            android:textSize="25sp"
            android:fontFamily="@font/nanumsquare_ac_r"
            app:layout_constraintBottom_toTopOf="@+id/registerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="15sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#fff"
            android:textSize="25sp"
            android:fontFamily="@font/nanumsquare_ac_r"
            android:background="@drawable/btn_design_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="15sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>